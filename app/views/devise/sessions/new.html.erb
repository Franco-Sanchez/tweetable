<h1 class="border border-solid border-gray-300 py-4 text-center text-xl font-bold bg-white">Log in</h1>

<div class="flex justify-center border border-solid border-gray-300 bg-white pt-6 pb-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col items-center gap-y-2 w-64' }) do |f| %>
    
    <div class="field w-full">
      <%= f.label :email, class: 'text-sm' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-solid border-gray-600 rounded-lg w-full h-9 py-2 px-4' %>
    </div>

    <div class="field w-full">
      <%= f.label :password, class: 'text-sm' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'border border-solid border-gray-600 rounded-lg w-full h-9 py-2 px-4' %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: 'bg-skyblue-500 rounded-3xl py-2 px-4 text-white cursor-pointer' %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>