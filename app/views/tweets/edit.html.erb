<h1>Edit Tweet</h1>
<%= form_with model: @tweet, local: true do |f| %>
  <% if @tweet.errors.any? %>
    <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :body %><br />
  <%= f.text_area :body %><br />
  <%= f.submit 'Edit' %>
<% end %>